@model ClientStaver.Models.Signup
@{
    ViewData["Title"] = "Sign up";
}
<h1>@ViewData["Title"]</h1>

@if (TempData["DeniedSignup"] != null)
{
    <p class="alert alert-danger">@TempData["DeniedSignup"]</p>
}

<form asp-action="SignupRequest" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role"></label>
@*         <input asp-for="Role" class="form-control" />*@
        @Html.DropDownListFor(model => model.Role, (IEnumerable<SelectListItem>)ViewBag.Roles, "Select role", new { @class = "form-control" })
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign up</button>
</form>

<div>
    <a asp-action="Home">Back</a>
</div> 